<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/shop_expense"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="197dp"
			android:background="@drawable/button_selector"
			android:drawableLeft="@drawable/shopexpense"
			android:text="Shop Expense"
			android:textColor="#ff0000"
			android:textSize="@dimen/text_size"
			android:layout_alignParentBottom="true" />





		<Button
			android:id="@+id/collection"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/button_selector"
			android:drawableLeft="@drawable/delivery"
			android:text="Collection"
			android:textColor="#ff0000"
			android:textSize="@dimen/text_size"
			android:layout_marginLeft="35dp"
			android:layout_marginStart="35dp"
			android:layout_alignBaseline="@+id/delivery"
			android:layout_alignBottom="@+id/delivery"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" />


		<Button
                android:id="@+id/delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
			    android:background="@drawable/button_selector"
                android:drawableLeft="@drawable/collection"
                android:text="   Delivery"
			    android:textColor="#ff0000"
			    android:textSize="@dimen/text_size"
			    android:layout_marginBottom="17dp"
				android:layout_marginLeft="26dp"
				android:layout_marginStart="26dp"
				android:layout_above="@+id/shop_expense"
				android:layout_toRightOf="@+id/collection"
				android:layout_toEndOf="@+id/collection" />


	</RelativeLayout>

	<ListView
		android:id="@+id/navdrawer"
		android:layout_width="@dimen/navdrawer_width"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="@android:color/white"
		android:choiceMode="singleChoice"
		android:divider="@android:color/transparent"
		android:dividerHeight="0dp"
		android:drawSelectorOnTop="false">

	</ListView>

</android.support.v4.widget.DrawerLayout>

